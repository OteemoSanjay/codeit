#!/bin/bash

websites=("https://cluster-console.prod.lib.harvard.edu" "https://deployment.prod.lib.harvard.edu" "https://logs.prod.lib.harvard.edu/" "https://acorn.lib.harvard.edu/" "https://arstaff.lib.harvard.edu/" "https://bibdata.lib.harvard.edu/readinesscheck" "https://booklabeler.lib.harvard.edu/" "https://curiosity.lib.harvard.edu" "https://drsmdsrv.lib.harvard.edu/drs_metadata/rest/heartbeat" "https://eadchecker.lib.harvard.edu/" "https://embed.lib.harvard.edu" "https://fts.lib.harvard.edu/fts/" "https://hollisarchives.lib.harvard.edu" "https://hgl.harvard.edu/" "https://hollisarchives.lib.harvard.edu" "https://jobmon-prod.lib.harvard.edu" "https://listview.lib.harvard.edu" "https://nrs.lib.harvard.edu/" "https://tools.lib.harvard.edu/hdforms/retrieval" "https://viewer.lib.harvard.edu")

for site in "${websites[@]}"

do

    status_code=$(curl -Is $site | head -n 1 | cut -d ' ' -f 2)

    echo "$site: $status_code"

done
